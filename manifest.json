{
    "name": "HBL Block",
    "version": "1.0",
    "declarative_net_request": {
        "rule_resources": [{
            "id": "ruleset_1",
            "enabled": false,
            "path": "rules.json"
        }]
    },
    "description": "Bloqueur de pub développé par HBL",
    "permissions": ["webRequest", "declarativeNetRequest"],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service-worker": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.lemonde.fr/*",
                "https://www.presse-citron.net/*",
                "https://www.w3schools.com/*"
            ],
            "js": ["content-script.js"]
        }
    ],
    "manifest_version": 3
}