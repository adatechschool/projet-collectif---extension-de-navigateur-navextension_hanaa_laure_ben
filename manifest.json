{
    "name": "HBL Block PUBs",
    "version": "1.0",
    "declarative_net_request": {
        "rule_resources": [{
            "id": "ruleset_1",
            "enabled": false,
            "path": "rules.json"
        }]
    },
    "description": "Bloqueur de pubs développé par HBL",
    "permissions": ["activeTab", "tabs", "declarativeNetRequest", "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service-worker": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "manifest_version": 3
}